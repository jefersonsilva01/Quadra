<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quadra - Orders</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/global.css" />
    <link rel="stylesheet" href="/stylesheets/profile.css" />
  </head>
  <body>
    <nav class="navbar fixed-top navbar-expand-lg">
      <div class="container-fluid">
        <a class="nav-title" href="/private/new-order">QUADRA</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="22"
            height="22"
            fill="#FFF"
            class="bi bi-list"
            viewBox="0 0 16 16"
          >
            <path
              fill-rule="evenodd"
              d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"
            />
          </svg>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav nav-menu">
            <li class="nav-item">
              <a class="nav-link" href="/private/profile">PROFILE</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/private/orders">ORDERS</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">LOGOUT</a>
            </li>
          </div>
        </div>
      </div>
    </nav>

    <div id="profile-container">
      <div id="user-info">
        <div id="user-image" style=" background-image: url({{image}})" alt="cover"></div>

        <h3>{{username}}</h3>
      </div>

      <form
        id="form-profile"
        action="/private/profile/{{id}}"
        method="post"
        enctype="multipart/form-data"
      >
        <label for="username">Username</label>
        <input
          value="{{username}}"
          required="true"
          maxlength="60"
          type="text"
          id="username"
          name="username"
          placeholder="Chose an username"
        />

        <label for="email">E-mail</label>
        <input
          {{#if email}}
            value="{{email}}"
          {{/if}}
          required="true"
          maxlength="60"
          type="email"
          id="email"
          name="email"
          placeholder="Enter your e-mail"
        />

        <label for="password">Password</label>
        <input
          {{#if password}}
            value="{{password}}"
          {{/if}}
          autocomplete="true"
          required="true"
          maxlength="120"
          minlength="8"
          type="password"
          id="password"
          name="password"
          placeholder="****************"
        />

        <label for="picture">CHOOSE A PICTURE</label>
        <input
          value="{{image}}"
          accept=".png, .jpg, .jpeg, image/*"
          type="file"
          id="picture"
          name="picture"
          placeholder="CHOOSE PICTURE"
          alt="{{alt}}"
        />
      
        <div id="profile-buttons">
          <a id="delete">DELETE</a>
          <a id="update" disabled="true">UPDATE</a>
        </div>
      </form>
    </div>
    <script src="../js/private.js">
    </script>
    <script src="../js/profile.js">
    </script>
    
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>