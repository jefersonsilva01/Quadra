<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quadra - Signup</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/global.css" />
    <link rel="stylesheet" href="/stylesheets/signup.css" />
  </head>
  <body>
    <div id="signup-container">
      <aside id="title-container">
        <a href="/" class="back">BACK TO HOME</a>
        <div>
          <h2>WELCOME TO</h2>
          <h1>QUDRA</h1>
        </div>
      </aside>

      <aside id="form-container">
        <a href="/" class="back">BACK TO HOME</a>

        {{#if messageError}}
          <p class="message error">
            {{messageError}}
          </p>
        {{/if}}
        
        {{#if messageSuccess}}
          <p class="message success">
            {{messageSuccess}}
          </p>
        {{/if}}

        <form action="/auth/signup" method="post" enctype="multipart/form-data">
          <label for="username">Username</label>
          <input
            {{#if username}}
              value="{{username}}"
            {{/if}}
            required="true"
            maxlength="60"
            type="text"
            id="username"
            name="username"
            placeholder="Chose an username"
          />

          <label for="email">E-mail</label>
          <input
            {{#if email}}
              value="{{email}}"
            {{/if}}
            required="true"
            maxlength="60"
            type="email"
            id="email"
            name="email"
            placeholder="Enter your e-mail"
          />

          <label for="password">Password</label>
          <input
            {{#if password}}
              value="{{password}}"
            {{/if}}
            required="true"
            maxlength="120"
            minlength="8"
            type="password"
            id="password"
            name="password"
            placeholder="****************"
          />

          <label for="picture">CHOOSE A PICTURE</label>
          <input
            accept=".png, .jpg, .jpeg, image/*"
            type="file"
            id="picture"
            name="picture"
            placeholder="CHOOSE PICTURE"
          />

          <button type="submit">SIGNUP</button>
        </form>

        <p>Or signup with</p>

        <div>
          <a href="/google">GOOGLE</a>
          <a href="/facebook">FACEBOOK</a>
        </div>

        <p>Already have a count? Click
          <a href="/auth/login">here</a>
          to Login</p>
      </aside>
    </div>
  </body>
</html>