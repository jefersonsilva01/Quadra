<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quadra - Recover</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/global.css" />
    <link rel="stylesheet" href="/stylesheets/recover.css" />
  </head>
  <body>
    <div id="recover-container">

      <form id="form-recover" action="/auth/recover" method="post">
        {{#if messageError}}
          <p class="message error">
            {{messageError}}
          </p>
        {{/if}}

        {{#if messageSuccess}}
          <p class="message success">
            {{messageSuccess}}
          </p>
        {{/if}}

        <h3>SET YOUR E-MAIL TO RECOVER PASSWORD</h3>

        <label for="email">E-mail</label>
        <input
          {{#if email}}
            value="{{email}}"
          {{/if}}
          maxlength="60"
          required="true"
          type="email"
          name="email"
          id="email"
          placeholder="Enter your e-mail"
        />

        <button type="submit">SEND RECOVERY LINK</button>

        <p>Remember your password? Click
          <a href="/auth/login">here</a>
          to login</p>
      </form>

    </div>
  </body>
</html>